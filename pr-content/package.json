{
  "name": "pr-content-action",
  "version": "1.0.0",
  "description": "GitHub Action to auto-update PR content using AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/index.js -o dist",
    "package": "ncc build src/index.ts -o dist",
    "test": "jest",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check src/"
  },
  "keywords": [
    "github-action",
    "ai",
    "pull-request",
    "automation"
  ],
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.1.1",
    "@octokit/rest": "^20.0.2",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@types/node": "^20.8.7",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c"
}
