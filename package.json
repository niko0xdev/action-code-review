{
  "name": "action-code-review",
  "version": "1.0.0",
  "description": "GitHub Action that uses OpenAI to review pull requests and suggest improvements",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf dist && npx ncc build src/index.ts -o dist --minify",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check --apply src/",
    "format": "biome format --write src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niko0xdev/action-code-review.git"
  },
  "keywords": [
    "github-action",
    "code-review",
    "openai",
    "pull-request",
    "typescript"
  ],
  "author": "niko0xdev",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.1.1",
    "openai": "^4.24.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@octokit/types": "^12.0.0",
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^1.0.4",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
